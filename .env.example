# ===========================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env in the root directory
# and fill in your actual values

# Database
POSTGRES_PASSWORD=bigleap_dev_password

# Backend
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# CORS - Comma-separated allowed origins
# For local development (frontend runs on port 5173)
CORS_ORIGIN=http://localhost:5173

# For production (DigitalOcean + Cloudflare Pages)
# CORS_ORIGIN=https://yourdomain.pages.dev,https://www.yourdomain.com

# S3/Cloudflare R2 (Optional for local dev, required for production)
S3_REGION=auto
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_BASE_URL=

# Frontend (only needed if running frontend container)
VITE_API_URL=http://localhost:5001/api
